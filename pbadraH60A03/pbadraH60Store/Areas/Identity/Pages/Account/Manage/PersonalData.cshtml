@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data | Boatbud";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>Personal Data</h3>

<p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
<p>
    <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
</p>
<form class="mb-2" id="download-data" asp-page="DownloadPersonalData" method="post">
    <button class="w-100 btn btn-primary" type="submit">Download</button>
</form>
<a id="delete" asp-page="DeletePersonalData" class="w-100 btn btn-danger">Delete</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}