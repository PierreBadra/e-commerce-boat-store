@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<h2 class="text-center">Welcome Back</h2>
<div class="col-lg-6 col-md-8 col-sm-10 mx-auto">
    <form id="account" method="post" class="shadow-sm overflow-hidden rounded-3 p-4 bg-light">
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
            <label asp-for="Input.Email" class="form-label">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger" style="font-size: 0.875rem;"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password"/>
            <label asp-for="Input.Password" class="form-label">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger" style="font-size: 0.875rem;"></span>
        </div>
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p class="text-danger" style="font-size: 0.875rem;">@error.ErrorMessage</p>
        }
        <div>
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Login</button>
        </div>
        <div class="pt-4">
            <p class="text-center">
                Don't have an account?
                <a class="text-decoration-none text-primary" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up</a>
            </p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}