@{
    ViewData["Title"] = "Home";
    Layout = "_HomeLayout";
}

<div class="relative bg-gray-100 h-full bg-transparent">
    <div class="relative flex items-center justify-center h-full overflow-hidden">
        <div class="flex flex-col items-center relative z-0 text-center px-6 md:px-12 lg:px-24">
            <h1 class="text-4xl sm:text-5xl font-bold text-white mb-6 drop-shadow">
                Explore new horizons.
            </h1>
            <p class="text-xl text-gray-200 mb-8 max-w-3xl mx-auto drop-shadow">
                Set sail with confidence and discover new horizons with our premium boats.
            </p>
            <a asp-controller="Products" asp-action="Index" class="px-20 py-2 bg-[#00171D] rounded-[50px] text-white text-[18.84px] oleo-script-bold hover:bg-gray-700">Shop Boats</a>

        </div>
        <div class="absolute w-full h-full -z-50">
            <img src="~/images/oliver-sjostrom-6iH-qD2kPLk-unsplash (1).jpg" alt="Homepage Image" class="object-cover object-right absolute h-full w-full brightness-75"/>
        </div>
    </div>
</div>